<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegisterDustbinFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <com.jss.smartdustbin.NoDefaultSpinner
            android:id="@+id/spinner_states"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/edit_text_padding"
            android:paddingRight="@dimen/edit_text_padding"
            android:backgroundTint="@android:color/black"
            android:layout_height="wrap_content"
            android:prompt="@string/state_prompt"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <com.jss.smartdustbin.NoDefaultSpinner
            android:id="@+id/spinner_cities"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/edit_text_padding"
            android:paddingRight="@dimen/edit_text_padding"
            android:backgroundTint="@android:color/black"
            android:layout_height="wrap_content"
            android:prompt="@string/city_prompt"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:id="@+id/bt_proceed2"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="64dp"/>

    </LinearLayout>

</FrameLayout>