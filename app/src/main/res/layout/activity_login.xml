        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_marginTop="64dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_bin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#9E373434"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:fontFamily="@font/brandon_text_regular"
                android:text="SMART DUSTBIN MANAGER"
                android:textSize="19sp" />

           <!-- <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:hint="Username"
                android:textColorHint=""/>
-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:hint="Username"
                app:hintTextColor="#902FFF"
                app:boxStrokeColor="#902FFF"
                android:textColorHint="#a4a4a4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_login_username"
                    android:singleLine="true"
                    android:padding="12dp"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Password"
                app:passwordToggleEnabled="true"
                app:hintTextColor="#902FFF"
                app:boxStrokeColor="#902FFF"
                app:passwordToggleTint="#902FFF"
                android:textColorHint="#a4a4a4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_login_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="48dp"
                android:text="Login"
                android:backgroundTint="#902FFF"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
   <!-- </com.github.captain_miao.optroundcardview.OptRoundCardView>-->


</FrameLayout>

