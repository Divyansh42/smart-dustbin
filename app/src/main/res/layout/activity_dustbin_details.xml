<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:layout_weight="1"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:context=".activity.DustbinDetailsActivity"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/constraint_layout">

                   <ProgressBar
                       android:id="@+id/dustbin_progressbar"
                       style="@android:style/Widget.ProgressBar.Horizontal"
                       android:layout_width="68dp"
                       android:layout_height="100dp"
                       android:progressDrawable="@drawable/progressbar_states"
                       app:layout_constraintTop_toTopOf="@+id/image_view"
                       app:layout_constraintStart_toStartOf="@id/image_view"
                       android:paddingTop="26dp"
                       android:layout_marginBottom="5dp"
                       android:paddingBottom="2dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginStart="16dp" />

                   <ImageView
                       android:id="@+id/image_view"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       app:layout_constraintTop_toTopOf="@+id/constraint_layout"
                       app:layout_constraintStart_toStartOf="@id/constraint_layout"
                       android:layout_margin="30dp"
                       android:src="@drawable/garbage" />


                   <ImageView
                       android:id="@+id/rc_validity_icon"
                       android:layout_width="22dp"
                       android:layout_height="22dp"
                       android:src="@mipmap/ic_launcher"
                       app:layout_constraintStart_toEndOf="@id/image_view"
                       app:layout_constraintTop_toTopOf="@id/image_view"
                       android:layout_marginLeft="20sp"
                       android:layout_marginTop="15dp"
                       android:layout_marginStart="20sp" />
                   <TextView
                       android:id="@+id/rc_validity"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="75% full"
                       android:textColor="#689F38"
                       app:layout_constraintStart_toEndOf="@id/rc_validity_icon"
                       app:layout_constraintTop_toTopOf="@+id/rc_validity_icon"
                       android:layout_marginLeft="12dp"
                       android:textSize="14sp"
                       android:layout_marginStart="12dp" />


                   <ImageView
                       android:id="@+id/insurance_validity_icon"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@mipmap/ic_launcher"
                       app:layout_constraintTop_toBottomOf="@id/rc_validity_icon"
                       app:layout_constraintStart_toStartOf="@id/rc_validity_icon"
                       android:layout_marginTop="8dp"
                       android:layout_marginLeft="2dp"
                       />


                   <TextView
                       android:id="@+id/insurance_validity"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:maxLines="2"
                       android:text="Last Emptied at 10:00 AM"
                       android:textColor="#F57C00"
                       app:layout_constraintStart_toEndOf="@id/insurance_validity_icon"
                       app:layout_constraintTop_toTopOf="@+id/insurance_validity_icon"
                       android:layout_marginLeft="12dp"
                       android:textSize="14sp"
                       android:layout_marginStart="12dp" />

                   <TextView
                       android:id="@+id/owner"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="City :"
                       android:textColor="#000000"
                       app:layout_constraintStart_toStartOf="@id/constraint_layout"
                       app:layout_constraintTop_toBottomOf="@id/image_view"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="20dp"
                       android:textSize="14sp"
                       android:layout_marginStart="7dp" />
                   <TextView
                       android:id="@+id/owner_name"
                       android:layout_width="179dp"
                       android:layout_height="wrap_content"
                       android:text="Noida"
                       android:textColor="#000000"
                       android:textAlignment="viewEnd"
                       android:layout_gravity="end"
                       android:layout_marginRight="5dp"
                       app:layout_constraintEnd_toEndOf="@id/constraint_layout"
                       app:layout_constraintTop_toTopOf="@id/owner"
                       android:textSize="14sp"
                       android:layout_marginEnd="5dp" />
                   <TextView
                       android:id="@+id/registered"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="7dp"
                       android:text="Locality :"
                       app:layout_constraintTop_toBottomOf="@id/owner"
                       app:layout_constraintStart_toStartOf="@id/constraint_layout"
                       android:textColor="#000000"
                       android:textSize="14sp"
                       android:layout_marginStart="7dp" />
                   <TextView
                       android:id="@+id/registered_no"
                       android:layout_width="179dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="end"
                       android:text="Sector 34"
                       app:layout_constraintEnd_toEndOf="@id/constraint_layout"
                       app:layout_constraintTop_toTopOf="@id/registered"
                       android:textAlignment="viewEnd"
                       android:layout_marginRight="5dp"
                       android:textColor="#000000"
                       android:textSize="14sp"
                       android:layout_marginEnd="5dp" />

                   <TextView
                       android:id="@+id/model"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="7dp"
                       android:text="S.No :"
                       android:textColor="#000000"
                       app:layout_constraintTop_toBottomOf="@id/registered"
                       app:layout_constraintStart_toStartOf="@id/constraint_layout"
                       android:textSize="14sp"
                       android:layout_marginStart="7dp" />
                   <TextView
                       android:id="@+id/model_no"
                       android:layout_width="179dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="end"
                       android:text="104"
                       android:textAlignment="viewEnd"
                       android:layout_marginRight="5dp"
                       app:layout_constraintEnd_toEndOf="@id/constraint_layout"
                       app:layout_constraintTop_toTopOf="@id/model"
                       android:textColor="#000000"
                       android:textSize="14sp"
                       android:layout_marginEnd="5dp" />

                   <Button
                       android:id="@+id/button1"
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorPrimaryDark"
                       android:text="Dustbin Emptied"
                       android:textAllCaps="false"
                       android:textColor="@android:color/white"
                       app:layout_constraintTop_toBottomOf="@+id/model"
                       android:textSize="16sp" />



               </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>



        </LinearLayout>

</RelativeLayout>
