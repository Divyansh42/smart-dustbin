            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/dustbin_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="fnskjfn"/>

        </LinearLayout>




    </LinearLayout>



</FrameLayout>