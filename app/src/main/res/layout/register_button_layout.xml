<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        style="@style/OptRoundCardView.Light"
        android:background="@android:color/white"
        android:id="@+id/top_card_view"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:optRoundCardCornerRadius="16dp"
        app:optRoundCardLeftTopCorner="true"
        app:optRoundCardRightTopCorner="true"
        app:optRoundCardTopEdges="false"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">
        <RelativeLayout
            android:paddingBottom="13dp"
            android:paddingRight="16dp"
            android:paddingTop="11dp"
            android:paddingLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="13dp"
            xmlns:android="http://schemas.android.com/apk/res/android">


            <ImageView
                android:id="@+id/image"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/garbage"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/insurance_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Register dustbin here to start the dustbin for monitoring."
                android:layout_toEndOf="@+id/image"
                android:layout_marginStart="10dp" />


            <Button
                android:layout_below="@+id/image"
                android:id="@+id/insurance_button"
                android:paddingRight="33dp"
                android:paddingLeft="33dp"
                android:layout_marginTop="14dp"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="Register Dustbin"
                android:background="@drawable/background_register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>